<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <!-- Hibernate Reactive SessionFactory for Prayer Context -->
    <persistence-unit name="selah-prayer-reactive">
        <provider>org.hibernate.reactive.provider.ReactivePersistenceProvider</provider>

        <!-- Prayer Context Entities -->
        <class>io.clroot.selah.domains.prayer.adapter.outbound.persistence.PrayerTopicEntity</class>
        <class>io.clroot.selah.domains.prayer.adapter.outbound.persistence.PrayerEntity</class>
        <class>io.clroot.selah.domains.prayer.adapter.outbound.persistence.PrayerPrayerTopicEntity</class>
        <class>io.clroot.selah.domains.prayer.adapter.outbound.persistence.LookbackSelectionEntity</class>

        <!-- Exclude unlisted classes (Member Context uses JPA) -->
        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <!-- Hibernate Dialect -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

            <!-- Schema generation (none - managed by Liquibase) -->
            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>

            <!-- Logging -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- Connection Pool (Vert.x default) -->
            <property name="hibernate.connection.pool_size" value="20"/>
        </properties>
    </persistence-unit>
</persistence>
